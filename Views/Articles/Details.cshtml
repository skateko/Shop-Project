@model             Article

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<dd>
    <h4>Article</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ArticleName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ArticleName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImageName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ImageName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
        <dt>
        @{
            if (Model.ImageName != "NoImage.jpg")
            {
                <img src="~/upload/@Model.ImageName"/>
            }
            else
            {
                <img src="~/image/@Model.ImageName"/>
            } 
        }
        </dd>
    </dl>
    <div>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Edit" asp-route-id="@Model?.ArticleId">Edit</a> <text>|</text>
        }
        <a asp-action="Index">Back to List</a>
    </div>
</div>

